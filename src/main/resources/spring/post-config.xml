<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.lanou3g"/>

    <bean id="postDao" class="com.lanou3g.post.dao.impl.PostDaoImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="postService" class="com.lanou3g.post.service.impl.PostServiceImpl">
        <property name="postDao" ref="postDao"/>
    </bean>

    <bean id="postAction" class="com.lanou3g.post.action.PostAction">
        <property name="postService" ref="postService"></property>
    </bean>
</beans>